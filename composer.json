{
  "require": {
    "craftcms/cms": "^4.2.0.2",
    "craftcms/redactor": "3.0.2",
    "craftcms/apple-news": "3.0.x-dev",
    "logtail/monolog-logtail": "^0.1.3",
    "mead-steve/mono-snag": "^4.1",
    "vlucas/phpdotenv": "^5.4.0"
  },
  "require-dev": {
    "sandersander/composer-link": "^0.3.1",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/",
      "applenewschannels\\": "config/apple-news-channels/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true,
      "sandersander/composer-link": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.0.2"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
